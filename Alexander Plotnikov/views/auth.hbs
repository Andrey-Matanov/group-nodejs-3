<div class="cont center">
  <form class="col-10" method="POST" action="/auth">
    <h1 class="mb-5">Authorization</h1>
 
    {{#if error}}
      <p class="red">Uncorrect login or password</p>
    {{/if}}
    <div class="form-group">
      <label for="exampleInputEmail1"Login or email</label>
      <input type="text" class="form-control" name="login" aria-describedby="emailHelp" placeholder="Enter email" value="{{login}}">
      <small id="emailHelp" class="form-text text-muted" style="display:none">We'll never share your email with anyone
        else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" name="password" placeholder="Password">
    </div>
    <small id="emailHelp" class="form-text text-muted" style="display:none">We'll never share your email with anyone
      else.</small>
    <div class="mb-3">
      <a href="/registration"> If you aren't registered go to here </a>
    </div>
    <button type="submit" class="btn btn-primary">Auth</button>
  </form>
</div>