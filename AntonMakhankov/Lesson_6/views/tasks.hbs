<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="block">
                <div class="row">
                    <div class="col-10">
                        <h1>Задачи</h1>
                    </div>
                    <div class="col-2">
                        <a href="/logout">Выход</a>
                    </div>
                </div>
                <div class="task-new">
                    <form method="POST" action="/tasks">
                        <input type="text" name="title" placeholder="Новая задача">
                        <button type="submit"><i class="fas fa-plus-circle"></i></button>
                    </form>
                </div>
                <div class="tasks-container">
                    <ul>
                        {{#each tasks}}
                        <li class="{{#if this.completed}}task-completed{{/if}}">
                            <div class="task-text">{{this.title}}</div>
                            <div class="task-btn-complete">
                                <form method="POST" action="/tasks/complete">
                                    <input type="hidden" value="{{this._id}}" name="id">
                                    <button type="submit" {{#if this.completed}}disabled{{/if}}><i class="fas fa-check-circle"></i></button>
                                </form>
                            </div>
                            <div class="task-btn-remove">
                                <form method="POST" action="/tasks/remove">
                                    <input type="hidden" value="{{this._id}}" name="id">
                                    <button type="submit"><i class="fas fa-minus-circle"></i></button>
                                </form>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>