<div>
  <form id="task" data-id="{{id}}">
    <fieldset class="task-field-set">
       <legend class="legend">
        {{#if id}}
          Редактирование ранее созданной задачи
        {{else}}
          Создание новой задачи
        {{/if}}
      </legend>

      <div class="form-field">  
        <div><label class="form-label" for="title">Задача</label></div>
        <input 
          required
          type="text"
          id="title"
          name="title"
          placeholder="наименование"
          style="width: 45%">
      </div>

      <div class="form-field">  
        <div><label class="form-label" for="description">Подробности</label></div>
        <textarea
          class="form-task-description"  
          id="description"
          name="description"
          placeholder="подробное описание задачи"></textarea>
      </div>

      <div class="completed form-field">
        <input 
          type="checkbox"
          id="completed"
          name="completed"
          {{#if id}}
            {{#if task.completed}} checked {{/if}}
          {{/if}}>
        <label class="form-label" for="completed">Завершена</label>
      </div>
    </fieldset>
    
    <input 
      type="submit"
      {{#if id}}
        value="Изменить"
      {{else}}
        value="Создать"
      {{/if}}>
  </form>
</div>

<script src="/js/socket.io.js"></script>
<script>
  const form = document.querySelector('#task')
  const title = document.querySelector('#title')
  const description = document.querySelector('#description')
  const completed = document.querySelector('#completed')
</script>
{{#if id}}
  <script src="/js/update-task.js"></script>
{{else}}
  <script src="/js/create-task.js"></script>
{{/if}}
