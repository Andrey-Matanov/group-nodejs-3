<div class="container">
    <div>
        <h2>Список заданий</h2>
        <a href="/task" ><button type="button" class="btn btn-primary">Добавить</button></a>
    </div>
            <br/>

    <table class="table table-hover" id="task_list">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Название</th>
          <th scope="col">Автор</th>
          <th scope="col">Статус</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      {{#each tasks}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.name}}</td>
          <td>{{this.user_id}}</td>
          <td>{{this.status}}</td>
          <td>
            <a href="/tasks/{{this.id}}" ><button type="button" class="btn btn-primary">Изменить</button></a>
            <button type="button" class="btn btn-danger" data-id="{{this.id}}">Удалить</button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
</div>
<script>
  $('#task_list').on('click', '.btn-danger', (event) => {
    let elem = $(event.target);

    fetch('/tasks/' + elem.data('id'), {
      method: 'DELETE',
    }).then((response) => {
        elem.parent().parent().remove();
    });
  });
</script>