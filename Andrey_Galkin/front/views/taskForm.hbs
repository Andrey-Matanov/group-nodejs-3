<div class="container">
    <div>
        <h2>Задание {{ task.id }}</h2>
    </div>
    <form action="/tasks" method="POST">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Название</label>
        <div class="col-sm-10">
          <input name="name" type="text" value="{{ task.name }}" class="form-control" id="name">
        </div>
      </div>
      <div class="form-group row">
        <label for="userId" class="col-sm-2 col-form-label">Пользователь</label>
        <div class="col-sm-10">
        {{ task.user_id }}
          <input name="userId" type="hidden" value="{{ task.user_id }}" class="form-control" id="userId">
        </div>
      </div>
      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Статус</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" value="0" {{#unless task.status }} checked {{/unless}}>
              <label class="form-check-label" for="">
                Выполнено
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="status" value="1" {{#if task.status }} checked {{/if}}>
              <label class="form-check-label" for="">
                Не выполнено
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Сохранить</button>
          <a href="/" class="btn btn-primary">Отмена</a>
        </div>
      </div>
      <input name="id" type="hidden" value="{{ task.id }}" class="form-control" id="taskId">
    </form>
</div>
<script>
  $().on('');
</script>